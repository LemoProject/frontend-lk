<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">


	<persistence-unit name="d4la" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<non-jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=lemo-umed)</non-jta-data-source>

		<class>de.lemo.persistence.d4la.entities.Person</class>
		<class>de.lemo.persistence.d4la.entities.LearningContext</class>
		<class>de.lemo.persistence.d4la.entities.LearningActivity</class>
		<class>de.lemo.persistence.d4la.entities.LearningObject</class>
		<class>de.lemo.persistence.d4la.entities.PersonContext</class>
		<class>de.lemo.persistence.d4la.entities.ObjectContext</class>
		<class>de.lemo.persistence.d4la.entities.LearningObjectExt</class>
		<class>de.lemo.persistence.d4la.entities.LearningContextExt</class>
		<class>de.lemo.persistence.d4la.entities.PersonExt</class>
		<class>de.lemo.persistence.d4la.entities.LearningActivityExt</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
		
	</persistence-unit>

