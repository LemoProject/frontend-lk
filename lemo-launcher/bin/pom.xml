	<build>
		<plugins>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<configuration>
					<mainClass>de.lemo.launcher.Launcher</mainClass>
				</configuration>
			</plugin>


			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>

				<executions>
					<execution>
						<id>copy-launcher-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<includeScope>provided</includeScope>
							<outputDirectory>${project.parent.basedir}/target/launcherbundles</outputDirectory>
							<excludeGroupIds>org.osgi</excludeGroupIds>
						</configuration>
					</execution>
					<execution>
						<id>copy-dependencies</id>
						<configuration>
							<skip>true</skip>
						</configuration>
					</execution>
				</executions>


			</plugin>

		</plugins>

